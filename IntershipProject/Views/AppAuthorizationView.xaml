<Page x:Class="IntershipProject.Views.AppAuthorizationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:vm ="clr-namespace:IntershipProject.ViewModels"
      xmlns:local="clr-namespace:IntershipProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AppAuthorization">
    
    <Page.InputBindings>
        <KeyBinding Command="{Binding LogInTheApp}" 
                    CommandParameter="{Binding ElementName=txtPassword}" 
                    Key="Enter"/>
    </Page.InputBindings>

    <Grid Background="#2f3748">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        MaxWidth="500" 
                        Margin="0, 30, 0, 0">
                
                <Label  Height="40" 
                        HorizontalAlignment="Center" 
                        Content="Login" 
                        FontSize="20" 
                        Foreground="#17a2b8" 
                        FontFamily="Segoe UI"/>
                
                <TextBox Margin="0" 
                         Height="40"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Style="{StaticResource TextBoxBaseStyle}"
                         Text="{Binding Login}"/>
                
                <Label  HorizontalAlignment="Center"
                        Content="Password"
                        Height="40" 
                        FontSize="20" 
                        Foreground="#17a2b8" 
                        FontFamily="Segoe UI"/>
                
                <PasswordBox Name="txtPassword" 
                             Margin="0"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Height="40"/>
                
                <Button Content="Enter" 
                        FontSize="18" 
                        Margin="0, 30, 0, 20" 
                        FontFamily="Segoe UI" 
                        Height="40" 
                        Command="{Binding LogInTheApp}" 
                        CommandParameter="{Binding ElementName=txtPassword}"
                        Style="{StaticResource EnterButtonStyle}"/>

            </StackPanel>
        </Grid>
        
        <Label Grid.Row="1"
               Content="{Binding ConnectionErrorStringContent}" 
               Margin="0" 
               Foreground="Red" 
               HorizontalAlignment="Center" 
               Visibility="{Binding ConnectionErrorStringVisibility}"/>
        
        <Controls:ProgressRing Grid.Row="2" 
                               IsActive="{Binding IsConnectionChecking}"  
                               Foreground="#17a2b8"/>
    </Grid>
</Page>
